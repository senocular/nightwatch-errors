{
  "src_folders" : ["tests"],
  "globals_path" : "globals.js",
  "output_folder" : "reports",
  "output" : true,

  "test_workers" : false,
  "-end_session_on_fail": false,
  "-skip_testcases_on_fail": false,

  "selenium": {
      "start_process": true,
      "server_path": "../lib/selenium-server-standalone-2.52.0.jar",
      "log_path": "",
      "host": "127.0.0.1",
      "port": 4444,
      "cli_args": {
          "webdriver.chrome.driver": "../lib/chromedriver",
          "trustAllSSLCertificates": true
      }
  },

  "test_settings" : {
    "default" : {
      "silent" : true,
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      
      "globals" : {
        "asyncHookTimeout": 100,
        "errorTesting": {
          "output": true
        }
      }
    }
  }
}
